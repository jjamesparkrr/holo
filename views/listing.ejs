  <div class="container overflow-hidden">
    <div class="row gy-5">
      <div class="col-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
          <div class="carousel-indicators" id="carouselIndicators">
          </div>
          <div class="carousel-inner" id="imageCarousel">

          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <div class="col-8">

        <div>
          <h1 id="listingTitle"></h1>
        </div>
        <div id="daysAgo" class="text-muted">
        </div>
        <hr>
        <div>
          <span style="font-family: serif; font-weight: bold;">CATEGORY: </span>

          <span style="font-family: serif" id="category"></span>
        </div>
        <br>

        <div style="font-family:serif; font-weight: bold">
          LISTED BY
        </div>
        <br>
        <div>



          <div class="col-8">
            <div class="card" style="border-radius: 15px; border-color: white">
              <div class="card-body p-4">
                <a id="linkToProfile" class="d-flex text-black">
                  <div id="userAvatar">

                  </div>
                  <div class="flex-grow-1 ms-3">
                    <h5 class="mb-1" id="userName"
                      style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif"></h5>
                    <div>
                      <div style="font-family:fantasy" id="countryListing">
                      </div>
                      <div style="font-family:fantasy">
                        <span id="cityListing"></span>
                        <span class="dot"> </span>
                        <span id="joinDate"> Joined </span>

                      </div>
                      <div class="text-muted">
                        3 miles away
                      </div>



                    </div>



                  </div>
                </a>
                <div class="d-flex pt-1">
                  <button type="button" class="btn btn-outline-primary me-1 flex-grow-1" data-bs-toggle="modal"
                    data-bs-target="#myModal">
                    Message
                  </button>

                </div>
              </div>

            </div>

          </div>

        </div>

        <hr>
        <div style="font-family:serif; font-weight: bold">
          DESCRIPTION
        </div>
        <div style="font-family:Verdana, Geneva, Tahoma, sans-serif" id="description" class="col-8"
          style="word-wrap:break-word;">
        </div>
        <hr>
        <div style="font-family:serif; font-weight: bold">
          COMMENTS
        </div>

      </div>
      <div class="col-4">
        <div>
          <span id="pricePerDay"></span>
          <span> / day </span>
        </div>
        <div>
          <label id="listingStartDate" for="startDate">From</label>
          <input class="form-control" id="listingDateFrom" type="date" />
          <label id="listingEndDate" for="endDate">To</label>
          <input class="form-control" id="listingDateTo" type="date" />
          <br>
          <div id="payOrDelete">
            <button id="payment" type="button" class="btn btn-primary flex-grow-1" style="display: none">
              Rent now
            </button>
            <button id="delete" type="button" class="btn btn-primary flex-grow-1" style="display: none"
              data-bs-toggle="modal" data-bs-target="#areYouSure">
              Delete post
            </button>
          </div>

        </div>

      </div>





    </div>
  </div>

  <!-- Modal HTML -->

  <div id="areYouSure" class="modal fade">
    <div class="modal-dialog modal-confirm" style="color: #636363;
		width: 400px;
		margin: 30px auto;">
      <div class="modal-content" style="padding: 20px;
      border-radius: 5px;
      border: none;
          text-align: center;
      font-size: 14px;">
        <div class="modal-header" style="border-bottom: none;   
        position: relative;">
          
          <h4 class="modal-title" style="text-align: center;
          font-size: 26px;
          margin: 30px 0 -10px;">Are you sure?</h4>
          <button type="button" class="close" data-bs-dismiss="modal" aria-hidden="true" style="position: absolute;
          top: -5px;
          right: -2px;">&times;</button>
        </div>
        <div class="modal-body" style="color: #999; text-align:left ;">
          <p>Do you really want to delete this post? This process cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-info" data-bs-dismiss="modal" style ="background: #c1c1c1;">Cancel</button>
          <button type="button" class="btn btn-danger" id="deleteConfirm" style = "background: #f15e5e;">Delete</button>
        </div>
      </div>
    </div>
  </div>




  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Message this seller</h5>



        </div>
        <div class="modal-body">
          <div class="form-group">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="message"></textarea>
          </div>
        </div>
        <div class="modal-footer">

          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" id="messageButton" class="btn btn-primary" data-bs-dismiss="modal">Send</button>


        </div>
      </div>

    </div>
  </div>
  </div>

